	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug 'trait-based-state-machine'",
			"cargo": {
				"args": [
					"build",
					"--bin=switchsm",
					"--package=switchsm"
				],
				"filter": {
					"name": "switchsm",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Release-with-debug 'trait-based-state-machine'",
			"cargo": {
				"args": [
					"build",
					"--profile=release-with-debug",
					"--bin=switchsm",
					"--package=switchsm"
				],
				"filter": {
					"name": "switchsm",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Release 'trait-based-state-machine'",
			"cargo": {
				"args": [
					"build",
					"--release",
					"--bin=switchsm",
					"--package=switchsm"
				],
				"filter": {
					"name": "switchsm",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'trait-based-state-machine'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=switchsm",
					"--package=switchsm",
				],
				"filter": {
					"name": "switchsm",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}